# ============================================
# ch.at Environment Configuration
# Copy this file to .env and customize
# ============================================

# ============================================
# QUICK START - BASIC SETUP (NEW USERS)
# ============================================
# Option 1: Use these 3 lines for simple OpenAI setup
BASIC_OPENAI_KEY="sk-proj-YOUR-OPENAI-API-KEY-HERE"
BASIC_OPENAI_URL="https://api.openai.com/v1/chat/completions"
BASIC_OPENAI_MODEL="gpt-4.1-nano"  # OpenAI's nano model - fast and efficient

# Available OpenAI models (from their API):
#   gpt-4.1-nano    - Smallest, fastest (default)
#   gpt-4.1-mini    - Small, balanced
#   gpt-4.1         - Full GPT-4.1
#   gpt-5-nano      - GPT-5 nano version
#   gpt-5-mini      - GPT-5 mini version
#   gpt-5           - Full GPT-5
#   gpt-4o-mini     - GPT-4o mini
#   gpt-4o          - GPT-4o (optimized)
#   gpt-3.5-turbo   - Classic, cheapest

# ============================================
# LEGACY CONFIGURATION (for old llm.go)
# ============================================
# These are used by the old LLM system if fallback is needed
OPENAI_API_KEY="${BASIC_OPENAI_KEY}"
API_URL="${BASIC_OPENAI_URL}"
MODEL_NAME="${BASIC_OPENAI_MODEL}"

# ============================================
# SERVER CONFIGURATION
# ============================================
HIGH_PORT_MODE=true  # Use 8080 instead of 80, 8443 instead of 443

# ============================================
# PRIVACY SETTINGS
# ============================================
ENABLE_LLM_AUDIT=false  # Set to true to log all conversations to llm_audit.db

# ============================================
# SERVICE CONFIGURATION
# ============================================
# DonutSentry v1
DONUTSENTRY_ENABLED=false
DONUTSENTRY_MODEL="${BASIC_OPENAI_MODEL}"
DONUTSENTRY_MAX_TOKENS=500

# SSH Service
SSH_ENABLED=false
SSH_PORT=2222
SSH_LLM_MODEL="${BASIC_OPENAI_MODEL}"

# DNS Service  
DNS_ENABLED=false
DNS_PORT=8053
DNS_LLM_MODEL="${BASIC_OPENAI_MODEL}"

